{% extends 'base.html.twig' %}

{% block title %}Übersicht{% endblock %}

{% block body %}

    <div class="row g-4">
        {% for model in models %}

        <div class="col-12 col-lg-4 cardContainer">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-10">
                            <h5 class="card-title">{{ model.name }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ model.type }}</h6>
                        </div>
                        <div class="col-2">
                            <div class="row g-2">
                                <div class="col-12">
                                    <form method="post" action="{{ path('app_configurator_copy') }}">
                                        <input type="hidden" name="modelId" value="{{ model.id }}" />
                                        <button type="submit" class="btn btn-outline-info btn-sm">
                                            <span class="material-symbols-outlined" >file_copy</span>
                                        </button>
                                    </form>
                                </div>
                                <div class="col-12">
                                    <form method="post" action="{{ path('app_configurator_delete') }}">
                                        <input type="hidden" name="modelId" value="{{ model.id }}" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <span class="material-symbols-outlined" >delete_forever</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p class="card-text cardContent">
                        {{ model.description }}
                    </p>
                    <div class="row g-2 d-none d-lg-flex cardButtonRow">
                        <div class="col-4">
                            <a class="btn btn-primary textIconLink" href="{{ path('app_configurator', {id: model.id}) }}">
                                <span class="material-symbols-outlined">settings</span><span>konfigurieren</span>
                            </a>
                        </div>
                        <div class="col-4">
                            <a class="btn btn-primary textIconLink" href="{{ path('app_trainer', {id: model.id}) }}">
                                <span class="material-symbols-outlined">model_training</span><span>trainieren</span>
                            </a>
                        </div>
                        <div class="col-4">
                            <a class="btn btn-primary textIconLink" href="{{ path('app_configurator', {id: model.id}) }}">
                                <span class="material-symbols-outlined">keyboard_double_arrow_right</span><span>ausführen</span>
                            </a>
                        </div>
                    </div>
                    <div class="d-lg-none">
                        <div class="d-grid gap-2">
                            <a class="btn btn-primary textIconLink" href="{{ path('app_configurator', {id: model.id}) }}">
                                <span class="material-symbols-outlined">settings</span><span>konfigurieren</span>
                            </a>
                            <a class="btn btn-primary textIconLink" href="{{ path('app_configurator', {id: model.id}) }}">
                                <span class="material-symbols-outlined">model_training</span><span>trainieren</span>
                            </a>
                            <a class="btn btn-primary textIconLink" href="{{ path('app_configurator', {id: model.id}) }}">
                                <span class="material-symbols-outlined">keyboard_double_arrow_right</span><span>ausführen</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% endfor %}
    </div>

{% endblock %}


{% block javascripts %}
    {{ encore_entry_script_tags('configurator') }}
{% endblock %}